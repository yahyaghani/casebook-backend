{
    "openapi": "3.0.0",
    "info": {
      "version": "1.0.0",
      "title": "Custom Search API",
      "description": "API for custom search tools"
    },
    "paths": {
      "/google_search": {
        "get": {
          "summary": "Perform a General Google search",
          "operationId": "performGoogleSearch",
          "parameters": [
            {
              "name": "query",
              "in": "query",
              "required": true,
              "schema": {
                "type": "string"
              }
            },
            {
              "name": "page",
              "in": "query",
              "required": false,
              "schema": {
                "type": "integer",
                "default": 1
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Search results"
            }
          }
        }
      },
      "/google_search_legislation": {
        "get": {
          "summary": "Perform a Google search for legislation",
          "operationId": "performGoogleSearchLegislation",
          "parameters": [
            {
              "name": "query",
              "in": "query",
              "required": true,
              "schema": {
                "type": "string"
              }
            },
            {
              "name": "page",
              "in": "query",
              "required": false,
              "schema": {
                "type": "integer",
                "default": 1
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Search results"
            }
          }
        }
      },
      "/store_content": {
        "post": {
          "summary": "Fetch and store content to our local db",
          "operationId": "fetchAndStoreContentChromadb",
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "title": {
                      "type": "string"
                    },
                    "url": {
                      "type": "string"
                    }
                  },
                  "required": ["title", "url"]
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Content fetched and stored successfully"
            }
          }
        }
      },
      "/query_articles": {
        "get": {
          "summary": "Query articles that could be stored in our local db",
          "operationId": "queryArticles",
          "parameters": [
            {
              "name": "query",
              "in": "query",
              "required": true,
              "schema": {
                "type": "string"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Query results"
            }
          }
        }
      }
    }
  }
  